<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card">

    <TextView
    android:gravity="center"
    android:id="@+id/tv_single_week"
    android:layout_centerHorizontal="true"
    android:layout_height="24dp"
    android:textColor="@color/colorBottomDialogText"
    android:layout_width="48dp"
    android:text="单周"/>

    <TextView
    android:gravity="center"
    android:id="@+id/tv_double_week"
    android:layout_height="24dp"
    android:layout_marginLeft="40dp"
    android:textColor="@color/colorBottomDialogText"
    android:layout_toRightOf="@+id/tv_single_week"
    android:layout_width="48dp"
    android:text="双周"/>

    <TextView
    android:gravity="center"
    android:id="@+id/tv_all_week"
    android:layout_height="24dp"
    android:layout_marginRight="40dp"
    android:textColor="@color/colorBottomDialogText"
    android:layout_toLeftOf="@+id/tv_single_week"
    android:layout_width="48dp"
    android:text="全选"/>

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_all_week"
        android:layout_centerHorizontal="true"
        android:columnCount="7"
        android:rowCount="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_layout">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_below="@+id/grid_layout"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/colorBottomDialogText"
        />

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_below="@+id/grid_layout"
            android:layout_weight="1"
            android:background="@null"
            android:text="确认"
            android:textColor="@color/colorBottomDialogText"
        />

    </LinearLayout>

</RelativeLayout>