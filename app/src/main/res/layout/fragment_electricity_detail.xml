<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_money_left"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            app:cardCornerRadius="4dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="56dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                >

                <TextView
                    android:id="@+id/tv_money_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/colorWhite"
                    android:textSize="36sp"
                    />

                <TextView
                    android:id="@+id/tv_money_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_money_sign"
                    android:textColor="@color/colorWhite"
                    android:textSize="36sp"
                    tools:text="40.66"
                    />

                <TextView
                    android:id="@+id/title_money_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_money_sign"
                    android:text="剩余金额"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_degree_left"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_below="@+id/card_money_left"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="4dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="56dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                >


                <TextView
                    android:id="@+id/tv_degree_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="56dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="36sp"
                    tools:text="336.54"
                    />

                <TextView
                    android:id="@+id/title_ec_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_degree_left"
                    android:text="剩余电量"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_total_use"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_below="@+id/card_degree_left"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="4dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="54dp"
                android:layout_marginRight="54dp"
                >

                <TextView
                    android:id="@+id/tv_degree_cur_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="26sp"
                    tools:text="22.67"
                    />

                <TextView
                    android:id="@+id/title_month_ec_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_degree_cur_month"
                    android:layout_alignLeft="@id/tv_degree_cur_month"
                    android:text="当月度数"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_degree_last_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    tools:text="91.96"
                    android:textColor="@color/colorAccent"
                    android:layout_above="@+id/title_last_month_ec_use"
                    android:layout_alignLeft="@id/title_month_ec_use"
                    />


                <TextView
                    android:id="@+id/title_last_month_ec_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上月度数"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@id/title_month_ec_use"
                    />


                <TextView
                    android:id="@+id/tv_money_sign2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/colorAccent"
                    android:textSize="26sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/tv_money_cur_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_money_sign2"
                    android:textSize="26sp"
                    tools:text="15.66"
                    android:textColor="@color/colorAccent"
                    />


                <TextView
                    android:id="@+id/title_month_money_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_money_sign2"
                    android:layout_alignLeft="@id/tv_money_sign2"
                    android:text="当月电费"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    />


                <TextView
                    android:id="@+id/tv_money_sign3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:layout_alignLeft="@id/tv_money_sign2"
                    android:textColor="@color/colorAccent"
                    android:textSize="26sp"
                    android:layout_above="@+id/title_last_month_money_use"
                    />

                <TextView
                    android:id="@+id/tv_money_last_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_money_sign3"
                    android:layout_above="@id/title_last_month_money_use"
                    android:textSize="26sp"
                    android:textColor="@color/colorAccent"
                    tools:text="30.66"
                    />

                <TextView
                    android:id="@+id/title_last_month_money_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上月电费"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@id/tv_money_sign3"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


