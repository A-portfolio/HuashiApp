<?xml version="1.0" encoding="utf-8"?>
<!--图书所在地和可借状态-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_library"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/state_layout"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxEms="4"
            android:text="距离归还日期还有:"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:maxEms="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            tools:text="过期"/>

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="天"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/state_layout"
        android:textSize="@dimen/library_state_size"
        tools:text="Java 从入门到精通"/>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_book"
        tools:text="fas"
        android:layout_toRightOf="@+id/state_layout"
        android:textSize="@dimen/library_state_size"/>

    <TextView
        android:id="@+id/tv_borrow_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_author"
        android:layout_toRightOf="@+id/state_layout"
        android:textSize="@dimen/library_state_size"
        tools:text="9"/>

    <TextView
        android:id="@+id/tv_deadline_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_borrow_date"
        android:layout_toRightOf="@+id/state_layout"
        android:text="应还日期:"
        android:textSize="@dimen/library_state_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_borrow_date"
        android:layout_toRightOf="@+id/tv_deadline_title"
        android:lines="2"
        android:textSize="@dimen/library_state_size"
        tools:text="fff"/>

</RelativeLayout>