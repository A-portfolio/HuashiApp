<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <Space
        android:id="@+id/schedule_date_divider"
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/schedule_divider_height"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_schedule_course_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/schedule_date_divider"
        android:textSize="@dimen/schedule_tv_course_week"/>

    <TextView
        android:id="@+id/tv__schedule_course_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_date_divider"
        android:textSize="@dimen/schedule_tv_course_date"/>
</RelativeLayout>