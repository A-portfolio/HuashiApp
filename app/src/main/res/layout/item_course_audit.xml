<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_course_marker"
        android:layout_margin="19dp"
        android:layout_width="56dp"
        android:layout_height="56dp" />

    <TextView
        android:id="@+id/tv_course_name_teacher"
        android:layout_marginTop="13dp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_toRightOf="@id/iv_course_marker"
        android:layout_marginLeft="18dp"
        android:text="音乐鉴赏(xx)"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_course_week"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_course_name_teacher"
        android:layout_toRightOf="@id/iv_course_marker"
        android:layout_marginLeft="16dp"
        android:text="1-17周"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tv_course_period"
        android:layout_below="@+id/tv_course_name_teacher"
        android:layout_marginTop="15dp"
        android:text="星期一1-2节"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_toRightOf="@+id/tv_course_week"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tv_course_site"
        android:layout_toRightOf="@id/tv_course_period"
        android:layout_below="@+id/tv_course_name_teacher"
        android:layout_marginTop="15dp"
        android:text="12121"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_choose_course"
        android:layout_toRightOf="@id/tv_course_site"
        android:background="@drawable/bg_couse_audit_btn"
        android:layout_marginTop="35dp"
        android:text="添加"
        android:layout_width="60dp"
        android:layout_height="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_course_week"
        android:layout_margin="16dp"
        android:background="@color/divider"/>
</RelativeLayout>

