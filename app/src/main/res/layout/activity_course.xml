<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.schedule.AddCourseActivity">

    <include
        android:id="@+id/view_toolbar"
        layout="@layout/view_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="?attr/actionBarSize">

        <EditText
            android:id="@+id/edit_course_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/course_edit_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/course_top_margin"
            android:drawableLeft="@drawable/icon_write_classname"
            android:drawablePadding="@dimen/course_add_drawable_padding"
            android:hint="输入课程名称"
            android:textSize="@dimen/schedule_add_course_size"/>

        <EditText
            android:id="@+id/edit_teacher_name" android:layout_width="match_parent"
            android:layout_height="@dimen/course_edit_height"
            android:layout_below="@+id/edit_course_name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/course_edit_text_margin"
            android:drawableLeft="@drawable/icon_write_teachername"
            android:drawablePadding="@dimen/course_add_drawable_padding"
            android:hint="输入老师名称"
            android:textSize="@dimen/schedule_add_course_size"/>

        <EditText
            android:id="@+id/edit_course_place"
            android:layout_width="match_parent"
            android:layout_height="@dimen/course_edit_height"
            android:layout_below="@+id/edit_teacher_name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/course_edit_text_margin"
            android:drawableLeft="@drawable/icon_write_classroom"
            android:drawablePadding="@dimen/course_add_drawable_padding"
            android:hint="输入上课地点"
            android:textSize="@dimen/schedule_add_course_size"/>

        <Space
            android:id="@+id/space"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btn_course_week"
            android:layout_width="match_parent"
            android:layout_height="@dimen/course_button_height"
            android:layout_below="@+id/edit_course_place"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/course_button_margin"
            android:layout_toLeftOf="@+id/space"
            android:background="@drawable/frame"
            android:drawableLeft="@drawable/icon_schedule_curweek_select"
            android:drawablePadding="@dimen/course_add_drawable_padding"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:text="选择上课周"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_course_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/course_button_height"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/edit_course_place"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/course_button_margin"
            android:layout_toRightOf="@+id/space"
            android:background="@drawable/frame"
            android:drawableLeft="@drawable/icon_add_classtime"
            android:drawablePadding="@dimen/course_add_drawable_padding"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:text="添加上课时间"
            android:textColor="@color/colorPrimary"/>

        <RelativeLayout
            android:id="@+id/layout_course_remind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/course_button_height"
            android:layout_below="@+id/btn_course_time"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingTop="12dp"
            android:layout_marginTop="@dimen/course_button_margin"
            android:background="@drawable/frame"
            android:elevation="2dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_course_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_remindclass"
                android:drawablePadding="@dimen/course_add_drawable_padding"
                android:paddingLeft="8dp"
                android:text="课程提醒"
                android:textSize="@dimen/schedule_add_course_size"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:checked="true"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/layout_course_remind"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_btn"
            android:text="完成"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>

</RelativeLayout>

