<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Space
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/schedule_divier"
        android:layout_height="@dimen/schedule_divider_height"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_schedule_course_number"
        android:layout_above="@+id/schedule_divier"
        android:textSize="@dimen/schedule_tv_course_number"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_schedule_course_time"
        android:layout_below="@+id/schedule_divier"
        android:textSize="@dimen/schedule_tv_course_time"
        android:layout_height="wrap_content"/>


</RelativeLayout>