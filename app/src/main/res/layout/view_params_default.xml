<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <TextView
        android:id="@+id/tv_title"
        android:text="使用默认选项进行成绩查询："
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_year"
        android:text="选择的学年是:  "
        android:textSize="14sp"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_year_value"
        android:layout_toRightOf="@+id/tv_year"
        android:layout_below="@id/tv_title"
        android:textColor="@color/colorAccent"
        android:text="2016-2017"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/tv_term"
        android:text="选择的学期是:  "
        android:textSize="14sp"
        android:layout_below="@+id/tv_year"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_term_value"
        android:layout_toRightOf="@+id/tv_term"
        android:layout_below="@id/tv_year_value"
        android:textColor="@color/colorAccent"
        android:text="第一学期/第二学期/第三学期"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_confirm"
        android:textColor="@color/colorAccent"
        android:text="确定"
        android:layout_marginRight="30dp"
        android:textSize="15sp"
        android:layout_below="@id/tv_term_value"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_cancel"
        android:textColor="@color/colorAccent"
        android:text="取消"
        android:layout_marginRight="90dp"
        android:textSize="15sp"
        android:layout_below="@id/tv_term_value"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:layout_below="@id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</RelativeLayout>