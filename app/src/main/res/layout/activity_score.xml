<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".score.ScoreActivity">

    <include
        android:id="@+id/layout_appbar"
        layout="@layout/view_toolbar"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize"
                android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/title_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/title_year"/>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/title_year"
                          android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_year1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                    android:gravity="center"
                    android:textSize="@dimen/score_select_item_size"
                    tools:text="2014"/>

                <TextView
                    android:id="@+id/tv_year2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                    android:gravity="center"
                    android:textSize="@dimen/score_select_item_size"/>

                <TextView
                    android:id="@+id/tv_year3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                    android:gravity="center"
                    android:textSize="@dimen/score_select_item_size"/>

                <TextView
                    android:id="@+id/tv_year4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                    android:gravity="center"
                    android:textSize="@dimen/score_select_item_size"/>

            </LinearLayout>

            <RadioGroup android:id="@+id/rb_group_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/title_year">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_year1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                    android:checked="true"
                />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_year2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_year3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_year4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                />

            </RadioGroup>

            <TextView
                android:id="@+id/title_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rb_group_year"
                android:layout_centerHorizontal="true"
                android:text="@string/title_term"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_term"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                    android:gravity="center"
                    android:text="第一学期"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                    android:gravity="center"
                    android:text="第二学期"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                    android:gravity="center"
                    android:text="第三学期"/>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/title_term">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_term1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"
                    android:checked="true"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_term2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_term3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/score_select_item_height"/>

            </RadioGroup>

            <Button
                android:id="@+id/btn_enter"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_below="@+id/rg_term"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:text="完成"
                android:textColor="@color/colorWhite"/>
        </RelativeLayout>


    </ScrollView>

    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>

</FrameLayout>




