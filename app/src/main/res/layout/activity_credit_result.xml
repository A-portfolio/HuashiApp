<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <include layout="@layout/view_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_orange4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_credit_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text=" "
            android:textColor="@color/colorWhite"
            android:textSize="48sp"
            android:textStyle="italic"
            tools:text="89"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="总学分"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_blue4">

        <TextView
            android:id="@+id/tv_zb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="20dp"
            android:text=" "
            android:textColor="@color/colorWhite"
            android:textSize="32sp" android:textStyle="normal|italic"/>

        <TextView
            android:id="@+id/zb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_zb"
            android:layout_alignStart="@+id/tv_zb" android:layout_below="@+id/tv_zb"
            android:text="专业必修学分"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/tv_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/zb"
            android:layout_alignStart="@+id/zb" android:layout_below="@+id/zb"
            android:layout_marginTop="16dp" android:text=" "
            android:textColor="@color/colorWhite" android:textSize="32sp"
            android:textStyle="normal|italic"/>
        <TextView
            android:id="@+id/tb"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_tb" android:layout_alignStart="@+id/tv_tb"
            android:layout_below="@+id/tv_tb" android:text="通识必修学分"
            android:textColor="@color/colorWhite" android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/tb"
            android:layout_alignStart="@+id/tb" android:layout_below="@+id/tb"
            android:layout_marginTop="18dp" android:fontFamily="sans-serif"
            android:text=" " android:textColor="@color/colorWhite"
            android:textSize="32sp" android:textStyle="normal|italic"/>
        <TextView
            android:id="@+id/th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/tv_th"
            android:layout_alignStart="@+id/tv_th" android:layout_below="@+id/tv_th"
            android:text="通识核心学分" android:textColor="@color/colorWhite"/>
        <Space
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_zx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignBaseline="@+id/tv_zb"
            android:layout_alignBottom="@+id/tv_zb" android:layout_marginLeft="32dp"
            android:layout_marginStart="36dp" android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/center" android:layout_toRightOf="@+id/center"
            android:text=" " android:textColor="@color/colorWhite" android:textSize="32sp"
            android:textStyle="normal|italic"/>
        <TextView
            android:id="@+id/zx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/tv_zx"
            android:layout_alignStart="@+id/tv_zx" android:layout_below="@+id/tv_zx"
            android:text="专业选修学分" android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/tv_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/zx"
            android:layout_alignStart="@+id/zx" android:layout_alignTop="@+id/tv_tb"
            android:text=" " android:textColor="@color/colorWhite"
            android:textSize="32sp" android:textStyle="normal|italic"/>
        <TextView
            android:id="@+id/tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/tv_tx"
            android:layout_alignStart="@+id/tv_tx" android:layout_below="@+id/tv_tx"
            android:text="通识选修学分" android:textColor="@color/colorWhite"/>

    </RelativeLayout>
</LinearLayout>