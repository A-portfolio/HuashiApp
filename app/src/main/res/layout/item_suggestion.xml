<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/suggestion_layout"
                android:layout_height="?attr/actionBarSize"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/suggestion_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/library_item_icon_padding"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:paddingRight="@dimen/library_item_icon_padding"
        android:src="@drawable/ic_suggestion"/>

    <TextView
        android:id="@+id/suggestion_text"
        android:paddingLeft="@dimen/library_item_text_padding"
        android:layout_toRightOf="@+id/suggestion_icon"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>