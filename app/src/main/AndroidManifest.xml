<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.muxi.huashiapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--获取设备唯一标识-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!--获取访问用户账户名的权限用以精准匹配标签(可选)-->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".EnteranceActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>®
            </intent-filter>
        </activity>

        <activity android:name=".login.LoginActivity"
                  android:launchMode="singleTask"
                  android:windowSoftInputMode="adjustResize"/>


        <activity android:name=".main.MainActivity"
                  android:launchMode="singleTask"/>

        <activity android:name=".SettingActivity"
                  android:launchMode="singleTask"/>

        <activity android:name=".schedule.ScheduleActivity"
                  android:launchMode="singleTask"/>

        <activity android:name=".schedule.AddCourseActivity"
                  android:launchMode="singleTask"/>


        <activity android:name=".score.ScoreActivity"
                  android:launchMode="singleTask"/>


        <activity android:name=".news.NewsActivity"
                  android:launchMode="singleTask"/>

        <activity android:name=".library.LibraryActivity"
                  android:launchMode="singleTask"/>

        <activity android:name=".library.LibrarySearchActivity"
                  android:launchMode="singleTask"/>

        <activity android:name=".library.LibraryLoginActivity"
                  android:launchMode="singleTask"
                  android:windowSoftInputMode="adjustPan|stateVisible"/>

        <activity android:name=".library.MineActivity"
                  android:launchMode="singleTask"/>

        <activity android:name=".card.CardActivity"
                  android:launchMode="singleTask"/>

        <activity android:name=".webview.WebViewActivity"
                  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.sina.weibo.sdk.action.ACTION_SDK_REQ_ACTIVITY"/>
            </intent-filter>
        </activity>

        <activity android:name=".apartment.ApartmentActivity"
                  android:launchMode="singleTask"/>


        <activity android:name=".CalendarActivity"/>

        <activity android:name=".AboutActivity"/>

        <activity android:name=".SuggestionActivity"/>

        <activity android:name=".electricity.ElectricityActivity"/>

        <activity android:name=".electricity.ElectricityDetailActivity"/>

        <activity android:name=".InfoActivity"/>

        <receiver android:name=".common.service.AlarmLiveReceiver">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".common.service.AlarmReceiver">
            <intent-filter>
                <action android:name="net.muxi.huashiapp.alarm"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".common.service.ApkInstallReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service android:name=".common.service.DownloadService"/>

        //第三方开放平台

        <meta-data
            android:name="ZHUGE_APPKEY" android:value="9197e7dd1e5c40cab4556a8b7c3145d3"/>
        <meta-data
            android:name="ZHUGE_CHANNEL" android:value="校园通"/>

        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="tencentg4LsthUz7j77LBYQ"/>
            </intent-filter>
        </activity>

        <activity android:name="com.tencent.connect.common.AssistActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar"
        />

        <activity
            android:name="com.sina.weibo.sdk.component.WeiboSdkBrowser"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false" android:windowSoftInputMode="adjustResize">
        </activity>

    </application>

</manifest>